<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/redApple" />
        </shape>
    </item>
    <item android:bottom="7dp"
          android:left="7dp"
          android:right="7dp"
          android:top="7dp">
        <shape android:shape="oval" >
            <gradient
                android:type="radial"
                android:startColor="@color/redApple"
                android:endColor="@color/darkRedCandy"
                android:gradientRadius="100"
                android:angle="270"
                android:centerX="0.5"
                android:centerY="0.5"/>
        </shape>
    </item>
</layer-list>